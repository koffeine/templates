{
	"include": [
		"src/**/*.js",
		"src/**/*.jsx"
	],
	"compilerOptions": {
		// Type Checking
		"strict": true,

		// Modules
		"module": "preserve",

		// JavaScript Support
		"checkJs": true,

		// Language and Environment
		"jsx": "preserve",
		"target": "esnext",

		// Completeness
		"skipLibCheck": true
	}
}
